extends layout
block content
  .container
    .header
      h2 VIP membership 
    br
    p: em You are about to subscribe to our VIP membership. 
    em Please verify your credentials to confirm subscription
    .form-content
      form(method="post")
        div.isVip
          input#isVip.checkbox(type="checkbox" name='isVip' required checked=true)
          label.checkbox(for='isVip')  Sign up as a VIP Member ($9.99/month)
        div 
          label(for='username') Username:
          input#username(type="text" name='username' required)
        div
          label(for='password') Password:
          input#password(type="password" name='password' required)
          if errors 
            each error in errors 
              ul
                li.error-msg #{error.msg}
          if errorMessages
            for err in errorMessages
              p.error-msg #{err}
        div 
          button(type='submit') Submit